// Prisma schema for FlipBook DRM Application

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

// User model for authentication and account management
model User {
  id            String   @id @default(cuid())
  email         String   @unique
  passwordHash  String
  name          String?
  role          Role     @default(USER)
  subscription  String   @default("free")
  storageUsed   BigInt   @default(0)
  emailVerified Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  documents            Document[]
  shareLinks           ShareLink[]
  subscriptions        Subscription[]
  emailSharesCreated   DocumentShare[] @relation("SharedByUser")
  emailSharesReceived  DocumentShare[] @relation("SharedWithUser")

  @@index([email])
  @@map("users")
}

// Document model for uploaded PDF files
model Document {
  id          String   @id @default(cuid())
  title       String
  filename    String
  fileSize    BigInt
  storagePath String
  mimeType    String   @default("application/pdf")
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  shareLinks    ShareLink[]
  emailShares   DocumentShare[]
  analytics     ViewAnalytics[]

  @@index([userId])
  @@index([createdAt])
  @@map("documents")
}

// ShareLink model for secure document sharing (link-based)
model ShareLink {
  id              String    @id @default(cuid())
  shareKey        String    @unique
  documentId      String
  document        Document  @relation(fields: [documentId], references: [id], onDelete: Cascade)
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt       DateTime?
  isActive        Boolean   @default(true)
  password        String? // bcrypt hash if password-protected
  maxViews        Int?
  viewCount       Int       @default(0)
  restrictToEmail String? // Optional email restriction for link shares
  canDownload     Boolean   @default(false)
  createdAt       DateTime  @default(now())

  @@index([shareKey])
  @@index([documentId])
  @@index([userId])
  @@index([restrictToEmail])
  @@map("share_links")
}

// DocumentShare model for email-specific sharing
model DocumentShare {
  id               String    @id @default(cuid())
  documentId       String
  document         Document  @relation(fields: [documentId], references: [id], onDelete: Cascade)
  sharedByUserId   String
  sharedBy         User      @relation("SharedByUser", fields: [sharedByUserId], references: [id], onDelete: Cascade)
  
  // Targeted share (email-based)
  sharedWithUserId String?
  sharedWithUser   User?     @relation("SharedWithUser", fields: [sharedWithUserId], references: [id])
  sharedWithEmail  String? // Used if recipient not registered yet
  
  // Optional controls
  expiresAt        DateTime?
  canDownload      Boolean   @default(false)
  note             String?   @db.Text
  createdAt        DateTime  @default(now())

  @@index([documentId])
  @@index([sharedByUserId])
  @@index([sharedWithUserId])
  @@index([sharedWithEmail])
  @@map("document_shares")
}

// ViewAnalytics model for tracking document views
model ViewAnalytics {
  id          String   @id @default(cuid())
  documentId  String
  document    Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  shareKey    String?
  viewerEmail String?
  ipAddress   String
  userAgent   String
  country     String?
  city        String?
  duration    Int? // Duration in seconds
  viewedAt    DateTime @default(now())

  @@index([documentId])
  @@index([viewedAt])
  @@index([shareKey])
  @@map("view_analytics")
}

// Subscription model for payment tracking
model Subscription {
  id                String   @id @default(cuid())
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan              String // free, pro, enterprise
  status            String // active, expired, cancelled
  razorpayOrderId   String?  @unique
  razorpayPaymentId String?  @unique
  amount            Int // Amount in smallest currency unit (paise for INR)
  currency          String   @default("INR")
  startDate         DateTime @default(now())
  endDate           DateTime
  createdAt         DateTime @default(now())

  @@index([userId])
  @@index([status])
  @@index([razorpayOrderId])
  @@map("subscriptions")
}

// Enum for user roles
enum Role {
  USER
  ADMIN
}
